#include<bits/stdc++.h>
using namespace std;
int lps(string s,string rev){
    int n=s.length();
    int m=rev.length();
    vector<vector<int>>dp(n+1,vector<int>(m+1,0));
    for(int i=1;i<=n;i++){
        for(int j=1;j<=m;j++){
            if(s[i-1]==rev[i-1]){
                dp[i][j]=1+dp[i-1][j-1];
            }else{
                dp[i][j]=max(dp[i][j-1],dp[i-1][j]);
            }
        }
    }
    return dp[n][m];
}
int main(){
    string s;
    getline(cin,s);
    string rev=s;
    reverse(rev.begin(),rev.end());
    cout<<lps(s,rev);
}

// Input 1 :
// madam

// Output 1 :
// 5
